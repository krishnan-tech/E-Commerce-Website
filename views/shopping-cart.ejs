<%  include include/head %>

<% if(products){ %>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">

				<% products.forEach(function(products){ %>
					<li class="list-group-item">
                        <span class="badge"><%= products.qty %></span>
                        <strong><%= products.item.name %></strong>
                        <span class="label label-success">$<%= products.price %></span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by 1</a></li>
                                <li><a href="#">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
				<% }); %>

				
			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<strong> Total:  <%=totalPrice%></strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href="/checkout"><button type="button" class="btn btn-success"> Checkout </button></a>
		</div>
	</div>
<% }else{ %>
	<div class="row">
	    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
	        <h2>No Items in Cart yet!</h2>
	    </div>
	 </div>
<% } %>



 <%  include include/footer %>
